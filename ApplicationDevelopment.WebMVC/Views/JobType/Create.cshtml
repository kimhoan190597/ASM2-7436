@model ApplicationDevelopment.WebMVC.Models.JobTypeViewModel


<div class="row">
    <div class="col-md-12">
        <form id="formJobType" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align: center;">
                <button type="button" onclick="createJobType();" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>


