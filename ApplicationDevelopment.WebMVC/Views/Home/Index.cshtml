@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<div class="text-center" style="background-color: #FFFACD; padding: 40px; border-radius: 10px;">
    <h1 class="display-4" style="color: #4CAF50; font-family: 'Georgia', serif;">
        Welcome <i class="fas fa-sun" style="color: #FF6347;"></i>
    </h1>
    <p style="font-size: 18px; color: #333;">
        Learn about <a href="https://learn.microsoft.com/aspnet/core" style="color: #FF6347; font-weight: bold;">building Web apps with ASP.NET Core</a>.
    </p>
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-md-6 col-sm-12" style="background-color: #FFFAF0; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h3 style="color: #4CAF50;">
            <i class="fas fa-clipboard-list" style="color: #FF6347;"></i> Danh sách công việc đã tạo
        </h3>
        @await Component.InvokeAsync("JobList", new { isForHome = true })
    </div>
    <div class="col-md-6 col-sm-12" style="background-color: #FFFAF0; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h3 style="color: #4CAF50;">
            <i class="fas fa-briefcase" style="color: #FF6347;"></i> Danh sách loại công việc
        </h3>
        @await Component.InvokeAsync("JobTypeList")
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #FFFAF0, #F0E68C);
        font-family: 'Arial', sans-serif;
    }
    .display-4 {
        font-size: 3rem;
        font-weight: bold;
    }
    .fa-sun {
        font-size: 1.5rem;
    }
    a:hover {
        text-decoration: underline;
    }
    h3 {
        font-size: 1.5rem;
        font-weight: bold;
        color: #4CAF50;
    }
    .row {
        margin-top: 30px;
    }
    .col-md-6 {
        margin-bottom: 20px;
    }
</style>